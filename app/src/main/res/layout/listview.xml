<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/listview_content_padding"
        android:paddingBottom="@dimen/listview_content_padding"
        android:text="Title"
        android:textColor="@color/blue"
        android:textSize="@dimen/listview_title_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/content"
        android:paddingTop="@dimen/listview_content_padding"
        android:paddingBottom="@dimen/listview_content_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/SUBTITLE"
            android:paddingLeft="@dimen/listview_content_padding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center"
            android:text="subtitle"
            android:textSize="@dimen/listview_content_size"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_toRightOf="@id/SUBTITLE"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/IMAGE"
                android:paddingLeft="@dimen/listview_content_padding"
                android:layout_gravity="center"
                android:layout_width="@dimen/listview_thumbnail_width"
                android:layout_height="@dimen/listview_thumbnail_height"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>